<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonText">
        <item name="android:textColor">@color/blackSemiTransparent</item>
        <!--<item name="android:alpha">0.65</item>-->
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="invButtonText">
        <item name="android:textColor">@color/colorAccent</item>
       <!-- <item name="android:alpha">1</item>-->
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="button">
        <item name="android:background">@color/colorAccent</item>
        <item name="elevation">2dp</item>
        <item name="android:textColor">@color/blackSemiTransparent</item>
    </style>

    <style name="card">
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="cardElevation">@dimen/selectedCardElev</item>
    </style>

    <style name="invisibleCard">
        <item name="cardElevation">@dimen/nonSelectedCardElev</item>
        <item name="cardBackgroundColor">#00000000</item>
    </style>

</resources>